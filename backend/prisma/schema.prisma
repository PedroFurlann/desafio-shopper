generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ride {
  id          String    @id @default(uuid())
  customer_id String
  origin      String
  destination String
  distance    Decimal
  duration    String
  driver_id   Int
  driver_name String
  value       Decimal
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}
